@using GreenTech.Domain.Dtos
@using GreenTech.Domain.Enuns
@model EnderecoDto

<form class="row g-3" method="post">

    <h1>Insira seus dados de Endereço</h1>

    <div class="col-md-6">
        <label class="form-label" asp-for="Logradouro"></label>
        <input type="text" class="form-control" asp-for="Logradouro">
    </div>

    <div class="col-md-6">
        <label class="form-label" asp-for="Numero"></label>
        <input type="text" class="form-control" asp-for="Numero">
    </div>

    <div class="col-md-6">
        <label class="form-label" asp-for="Referencia"></label>
        <input type="text" class="form-control" asp-for="Referencia">
    </div>

    <div class="col-md-6">
        <label class="form-label" asp-for="Cep"></label>
        <input type="text" class="form-control" asp-for="Cep">
    </div>

    <div class="col-md-6">
        <label class="form-label" asp-for="Cidade"></label>
        <input type="text" class="form-control" asp-for="Cidade">
    </div>

    <div class="col-md-6">
        <label class="form-label" asp-for="Estado"></label>
        <input type="text" class="form-control" asp-for="Estado">
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Salvar</button>
    </div>

</form>